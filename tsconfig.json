{
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "downlevelIteration": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "target": "ES6",
    "outDir": "./dist",
    "lib": [
      "WebWorker",
      "DOM",
    ],
    "types": [
      "node",
      "@cloudflare/workers-types"
    ],
  },
  "files": [
    "./src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}